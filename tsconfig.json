    "outDir": "./dist",
    "target": "ES2022",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "esm": true
  },
  "exclude": [
      "**/node_modules/**",
      "**/dist/**"
  ]
}